doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title website number 2
    link(rel="stylesheet", href="./styles/styles.css")
  body(class="bg-gray-100 min-h-screen flex items-center justify-center")
    if messages.error
      script.
        alert("#{messages.error[0]}");
    sectio
      div(class="w-full max-w-sm bg-white p-8 rounded-lg shadow-lg")
        form(action="/login" method="POST")
          h2(class="text-2xl font-bold text-center mb-6") Login

          .mb-4.relative
            ion-icon(name="mail-outline" class="absolute left-3 top-1/3 transform -translate-y-1/2 text-gray-400")
            input(type="email" name="email" required class="w-full pl-10 pr-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500")
            label(for="" class="block text-sm text-gray-600 mt-1") Email

          .mb-4.relative
            ion-icon(name="lock-closed-outline" class="absolute left-3 top-1/3 transform -translate-y-1/2 text-gray-400")
            input(type="password" name="password" required class="w-full pl-10 pr-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500")
            label(for="" class="block text-sm text-gray-600 mt-1") Password

          .flex.items-center.justify-between.mb-4.text-sm.text-gray-600
            label.flex.items-center.gap-2
              input(type="checkbox" class="form-checkbox text-blue-500")
              | Remember Me
            a(href="#" class="text-blue-500 hover:underline") Forget Password

          button(type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition")
           |Log in

          .text-center.mt-4.text-sm.text-gray-600
            | Don't have an account?
            a(href="#" class="text-blue-500 hover:underline ml-1") Register

    script(type="module", src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js")
    script(nomodule, src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js")
  